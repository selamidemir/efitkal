<%- include("./partials/head.ejs") %> <%- include("./partials/top_menu.ejs") %>

<div class="main-wrapper">
  <section class="page-title bg-2">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <ul class="list-inline mb-0">
            <li class="list-inline-item">
              <a
                href="/"
                class="text-sm letter-spacing text-white text-uppercase font-weight-bold"
                >Home</a
              >
            </li>
            <li class="list-inline-item"><span class="text-white">|</span></li>
            <li class="list-inline-item">
              <a
                href="/users/register"
                class="text-color text-uppercase text-sm letter-spacing"
                >Register</a
              >
            </li>
          </ul>
          <h1 class="text-lg text-white mt-2">User Register</h1>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Login start -->
  <section class="section services">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
          <div class="section-title">
            <div class="divider mb-3"></div>
            <h2>Register</h2>
            <form action="/users/register" method="POST" id="registerForm">
              <div class="mb-3"><%= error %></div>
              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  aria-describedby="nameHelp"
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  aria-describedby="emailHelp"
                />
                <div id="emailHelp" class="form-text">
                  We'll never share your email with anyone else.
                </div>
              </div>
              <div class="mb-3">
                <label for="userType" class="form-label">User Type</label>
                <select
                  class="form-control"
                  id="userType"
                  name="userType"
                  aria-describedby="userTypeHelp"
                >
                  <option value="user">User</option>
                  <option value="instructor">Instructor</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  value=""
                />
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Section Login End -->

  <%- include("./partials/footer.ejs") %> <%- include("./partials/bottom.ejs")
  %>
</div>
